<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="8dp"
        android:layout_margin="@dimen/cardview_compat_inset_shadow">

        <RelativeLayout
            android:id="@+id/rl_categoryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogoLight"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/cr_ivImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/cr_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cr_ivImage"
                android:textColor="@android:color/white"
                android:fontFamily="@font/calibrib"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/cr_btnNext"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/whitenext" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>