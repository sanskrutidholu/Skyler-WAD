<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallUsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whiteback" />

            <TextView
                android:id="@+id/tv_cName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:text="Contact Us"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/contact_ivLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/skylernewlogo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/contact_tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_below="@+id/about_ivLogo"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/calibri"
            android:lineHeight="25dp"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/contact_btnCall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLogoDark"
            android:text="+917805919117"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_below="@+id/contact_tvContact"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/calibrib"
            android:textSize="20sp"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/contact_btnCall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLogoDark"
            android:text="+918889557784"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_below="@+id/contact_tvContact"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/calibrib"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>