<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hide"
    tools:context=".activities.ForgetPasswordActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/otp_ivLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/skylernewlogo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/frgtPswd_tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:layout_below="@id/otp_ivLogo"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/frgtPswd_etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittest_bg"
            android:inputType="number"
            android:hint="Enter Your Mobile"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_below="@+id/frgtPswd_tvText"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="5dp"
            android:fontFamily="@font/calibri"
            android:textSize="14sp" />

        <Button
            android:id="@+id/frgtPswd_btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogoDark"
            android:text="Verify Now"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_below="@+id/frgtPswd_etMobile"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/calibrib"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/frgtPswd_llText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_below="@+id/frgtPswd_btnVerify"
            android:layout_marginVertical="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_divider_left"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to try again"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/calibri"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_divider_right"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/frgtPswd_btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogoDark"
            android:text="Back To Login"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_below="@+id/frgtPswd_llText"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/calibrib"
            android:textSize="20sp"/>

    </RelativeLayout>

</ScrollView>