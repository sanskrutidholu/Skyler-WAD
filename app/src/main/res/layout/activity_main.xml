<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:id="@+id/hide"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:padding="5dp">

        <TextView
            android:id="@+id/skipbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Skip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:layout_below="@id/ll1"
        android:layout_marginVertical="10dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/skylernewlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="Get Started"
                android:textColor="@color/colorLogoLight"
                android:textSize="28dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen"
                android:textColor="@color/colorLogoBg"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen1"
                android:textColor="#A3464646"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen2"
                android:textColor="#E4000000"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingRight="10dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/signup_bg"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </Button>

                <Button
                    android:id="@+id/btn_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/signup_bg"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Sign In"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp">

                </Button>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/signin_fl"
        android:visibility="gone"
        android:background="@drawable/signin_signup_bg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:src="@drawable/leftarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:id="@+id/l_mail"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittest_bg"
                android:padding="15dp"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="12dp"
                android:hint="Phone No"
                android:textColorHint="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/l_password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittest_bg"
                android:padding="15dp"
                android:maxLength="8"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="12dp"
                android:hint="Password"
                android:textColorHint="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/forgetPassword"
                android:layout_marginTop="8dp"
                android:textSize="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Forget Password ?"
                android:textColor ="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen1"
                android:textColor="#A3464646"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen2"
                android:textColor="#E4000000"
                android:textSize="12dp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_login"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="12dp">

            </Button>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                android:layout_width="150dp"
                android:layout_height="1dp"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/signup_fl"
        android:visibility="gone"
        android:background="@drawable/signin_signup_bg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/leftarrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_back1"
                    android:gravity="center"
                    android:text="Create an Account"
                    android:textSize="15dp" />
            </RelativeLayout>


            <EditText
                android:id="@+id/r_name"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittest_bg"
                android:padding="15dp"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="12dp"
                android:hint="Enter Full Name"
                android:textColorHint="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/r_mail"
                android:inputType="phone"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:background="@drawable/edittest_bg"
                android:padding="15dp"
                android:textSize="12dp"
                android:hint="Phone No."
                android:textColorHint="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/r_password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittest_bg"
                android:padding="15dp"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="12dp"
                android:hint="Password"
                android:textColorHint="#9A464646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/sp_location"
                style="@style/mySpinner"
                android:background="@drawable/edittest_bg"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:inputType="text"
                android:textSize="12dp"
                android:text="Current Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen1"
                android:textColor="#A3464646"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="@string/mainsreen2"
                android:textColor="#E4000000"
                android:textSize="13dp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_registration"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="12dp">

            </Button>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/black"
                android:layout_width="150dp"
                android:layout_height="1dp"/>

        </LinearLayout>

    </FrameLayout>




</RelativeLayout>