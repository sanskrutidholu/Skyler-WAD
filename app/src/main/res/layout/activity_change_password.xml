<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hide"
    tools:context=".activities.EditProfileActivity">

    <LinearLayout
        android:id="@+id/ctgrDetail_llBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whiteback" />

            <TextView
                android:id="@+id/tv_cName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:text="Change Password"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Old Password : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/calibril"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tv_cpaswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textCursorDrawable="@color/black"
                    android:backgroundTint="@color/colorLogoDark"
                    android:textColorHint="@color/black"
                    android:cursorVisible="false"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/calibril"
                    android:textSize="18sp"
                    android:drawableTint="@color/colorLogoDark"
                    android:drawableEnd="@drawable/changepassword"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="New Password :"
                    android:textColor="@color/black"
                    android:fontFamily="@font/calibril"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tv_npaswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textCursorDrawable="@color/black"
                    android:backgroundTint="@color/colorLogoDark"
                    android:textColorHint="@color/black"
                    android:cursorVisible="false"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/calibril"
                    android:textSize="18sp"
                    android:drawableTint="@color/colorLogoDark"
                    android:drawableEnd="@drawable/changepassword"/>

            </LinearLayout>

            <TextView
                android:paddingHorizontal="15dp"
                android:id="@+id/tv_proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED ?"
                android:paddingVertical="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:fontFamily="@font/calibril"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>